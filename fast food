print('1- hambúrguer - R$10,00')
print('2- Batata Frita - R$5,00')
print('3- Refrigerante - R$4,00')
print('4- Sorvete - R$2,00')

opcao = int(input('Digite o número da opção desejada: '))
quantidade = int(input('digite a quantidade desejada: '))
nome = input('Digite o nome do cliente: ')

if opcao ==1:
    print(' Hambúrguer sendo preparado para ', nome)
    print('Tempo de espera de 15 minutos')
    total = quantidade * 10
    print('Total: R$', total)

if opcao ==2:
    print(' Batata frita sendo preparado para ', nome)
    print('Tempo de espera de 1 minuto')
    total = quantidade * 10
    print('Total: R$', total)

    if opcao ==3:
    print(' Refrigerante sendo preparado para ', nome)
    print('Tempo de espera de 1 minuto')
    total = quantidade * 10
    print('Total: R$', total)

    if opcao ==4:
    print('sorvete sendo preparado para ', nome)
    print('Tempo de espera de 6 minuto')
    total = quantidade * 10
